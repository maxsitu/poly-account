{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules", "src/public"],
    "verbose": true,
    "execMap": {
        "ts": "node --require ts-node/register --require tsconfig-paths/register"
      },
    "watch": ["src/"],
    "ext": "ts,gql",
    "env": {
        "NODE_ENV": "development"
    }
}