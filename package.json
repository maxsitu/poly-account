{
  "name": "poly-account",
  "version": "1.0.0",
  "description": "Account service built on GraphQL and mysql providing user authenticate/authorization services",
  "main": "start.ts",
  "build_dir": "dist",
  "scripts": {
    "test": "test",
    "typeorm": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix && del ${npm_package_build_dir}",
    "build": "script/build.sh",
    "dev": "nodemon src/start.ts",
    "dev:debug": "nodemon --inspect src/start.ts",
    "start": "node dist/start.js",
    "heroku-postbuild": "script/build.sh && typeorm migration:run"
  },
  "keywords": [
    "typescript",
    "typescript-orm",
    "express",
    "account-service"
  ],
  "author": "Situ Ma",
  "license": "ISC",
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^4.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-session": "^1.17.0",
    "graphql": "^14.5.8",
    "graphql-scalars": "^1.0.2",
    "graphql-tools": "^4.0.6",
    "jsonwebtoken": "^9.0.0",
    "merge-graphql-schemas": "^1.7.0",
    "pg": "^7.12.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.22",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "0.0.13",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.15",
    "@types/graphql": "^14.5.0",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.7.9",
    "@types/redis": "^2.8.14",
    "@types/uuid": "^3.4.5",
    "@types/yup": "^0.26.24",
    "cpy-cli": "^2.0.0",
    "del-cli": "^3.0.0",
    "nodemon": "^1.19.3",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "files": [
    "${npm_package_build_dir}/**/*"
  ],
  "engines": {
    "node": "^13.0.1"
  }
}
